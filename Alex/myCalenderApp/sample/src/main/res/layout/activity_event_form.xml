<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.78"
            android:gravity="center_horizontal"
            android:text="ADDING EVENT "
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/nameOfEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Event Name" />

        <EditText
            android:id="@+id/locationOfEvent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1.63"
            android:hint="Location of Event" />

        <Spinner
            android:id="@+id/typeOfEvent"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <CheckBox
            android:id="@+id/cbSuvendu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/isPeriodic" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.31"
            android:onClick="setDate"
            android:text="set Date" />

        <TimePicker
            android:id="@+id/timePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            android:layout_weight="0.36"
            android:hint="Notes" />

        <Button
            android:id="@+id/btnDoneAddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Done" />

    </LinearLayout>
</ScrollView>